{
  "services": [
    {
      "name": "docker-db",
      "exec": [
        "/usr/bin/docker", "run",
        "-i",
        "--rm",
        "--name={name}",
        "--network={networkname}",
        "{volume}",
        "{port}",
        "{image_name}"
      ],
      "execStop": [ "/usr/bin/docker", "stop", "{name}" ],
      "context": {
        "name": "{service_name}_{engine_name}",
        "image_name": "health_{engine_name}:dev",
        "port": "",
        "volume": ""
      },
      "abstract": true,
      "waitUntil": 5000,
      "type": "script"
    },
    {
      "name": "mongodb",
      "extends": "docker-db",
      "retry": 2,
      "waitUntilStr": "waiting for connections on port ",
      "context": {
        "volume": ["-v", "db-mongo:/data/db"],
        "engine_name": "mongodb",
        "port": ["-p", "27017:27017"]
      }
    },
    {
      "name": "rabbitmq",
      "exec" : [ "/usr/bin/docker", "run",
        "-i",
        "--rm",
        "--name=rabbitmq",
        "--network={networkname}",
        "rabbitmq:3-management"],
      "execStop": [ "/usr/bin/docker", "stop", "rabbitmq"],
      "waitUntil": 60000,
      "waitUntilStr": "Server startup complete;",
      "extraData": [
        {
          "name": "rabbitmq management",
          "exec": ["/bin/bash", "-c",
            "sleep 1 && echo \"http://$(docker inspect rabbitmq | jq -r '.[].NetworkSettings.Networks.\"{networkname}\".IPAddress'):15672/\""
          ],
          "type": "link"
        },
        {
          "name": "nameko cmdline",
          "exec": ["/bin/bash", "-c",
            "sleep 1 && echo \"RABBITMQ_HOST=$(docker inspect rabbitmq | jq -r '.[].NetworkSettings.Networks.\"{networkname}\".IPAddress') nameko shell --config {root}/services/maiev-base/app/config.yaml\""
          ],
          "type": "string"
        }
      ]
    },
    {
      "name": "docker",
      "waitUntil": 2500,
      "exec" : ["/usr/bin/docker", "run",
        "--rm", "-i",
        "-v", "{root}/services/maiev-base/app/common/:/app/common:ro",
        "-v", "{root}/services/maiev-base/run_dev.sh:/run_dev.sh:ro",
        "-v", "{current_dir}/app/service:/app/service:ro",
        "-v", "{current_dir}/app/scale.json:/app/scale.json:ro",
        "{extra_volume}",
        "-e", "SERVICE_NAME={service_name}",
        "-e FORCE_COLOR=true",
        "{extra_env}",
        "--network={networkname}",
        "--link", "rabbitmq:rabbitmq",
        "--link", "maiev_mongodb:maiev_mongodb",
        "{extra_link}",
        "--name={docker_name}",
        "{image_name}",
        "/run_dev.sh"],
      "execStop": ["/usr/bin/docker", "stop", "{docker_name}"],
      "require": [
        "rabbitmq"
      ],
      "abstract": true
    }
  ],
  "context": {
    "service_name": "{dirname}",
    "docker_name": "{service_name}",
    "networkname": "maiev-dev",
    "image_name": "{service_name}:dev",
    "extra_link": "",
    "extra_volume": "",
    "extra_env": ""
  },
  "discover": [
    "services",
    "test"
  ]
}